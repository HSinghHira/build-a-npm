{
  "name": "build-a-npm",
  "version": "0.2.3",
  "author": {
    "name": "Harman Singh Hira",
    "url": "https://me.hsinghhira.me"
  },
  "type": "commonjs",
  "bin": {
    "build-a-npm": "./index.js"
  },
  "description": "A tool to create and publish Node packages with automatic version bumping",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "github": "git add -A && git commit -m \"Building\" && git push",
    "publish": "npm run publish:patch && npm run github",
    "publish:patch": "node publish.js --github --npmjs",
    "publish:minor": "node publish.js --github --npmjs --minor",
    "publish:major": "node publish.js --github --npmjs --major"
  },
  "dependencies": {
    "build-a-npm": "0.2.1",
    "inquirer": "^12.9.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hsinghhira/build-a-npm.git"
  },
  "bugs": {
    "url": "https://github.com/hsinghhira/build-a-npm/issues"
  },
  "homepage": "https://github.com/HSinghHira/build-a-npm",
  "keywords": [
    "npm",
    "package",
    "scaffold",
    "cli",
    "generator",
    "publish",
    "github-packages",
    "npmjs"
  ],
  "engines": {
    "node": ">=12.0.0"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "files": [
    "index.js",
    "publish.js"
  ]
}