{
  "name": "@hsinghhira/build-a-npm",
  "version": "0.3.20",
  "author": {
    "name": "Harman Singh Hira",
    "url": "https://me.hsinghhira.me"
  },
  "description": "A tool to create and publish Node packages with automatic version bumping",
  "main": "index.js",
  "bin": {
    "build-a-npm": "./index.js"
  },
  "homepage": "https://github.com/hsinghhira/build-a-npm",
  "license": "MIT",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "github": "git add -A && git commit -m \"Building\" && git push",
    "publish": "npm run publish:patch",
    "publish:patch": "npm run github && node node_modules/build-a-npm/publish.js --patch --github --npmjs",
    "publish:minor": "npm run github && node node_modules/build-a-npm/publish.js --minor --github --npmjs",
    "publish:major": "npm run github && node node_modules/build-a-npm/publish.js --major --github --npmjs",
    "do": "node publish.js --patch --github --npmjs && npm run github"
  },
  "dependencies": {
    "inquirer": "*",
    "@inquirer/prompts": "*"
  },
  "devDependencies": {
    "build-a-npm": "*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hsinghhira/build-a-npm.git"
  },
  "bugs": {
    "url": "https://github.com/hsinghhira/build-a-npm/issues"
  },
  "keywords": [
    "npm",
    "package",
    "scaffold",
    "cli",
    "generator",
    "publish",
    "github-packages",
    "npmjs"
  ],
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/",
    "access": "public"
  },
  "files": [
    "index.js",
    "publish.js",
    "lib",
    "config.template.json"
  ]
}