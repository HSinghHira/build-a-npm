{
  "name": "build-a-npm",
  "version": "0.3.33",
  "author": {
    "name": "Harman Singh Hira",
    "url": "https://me.hsinghhira.me"
  },
  "description": "A tool to create and publish Node packages with automatic version bumping and GitHub integration.",
  "main": "index.js",
  "bin": {
    "build-a-npm": "./index.js"
  },
  "homepage": "https://github.com/hsinghhira/build-a-npm",
  "license": "MIT",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "git": "git add -A && git commit -m 'Update' && git push",
    "publish": "npm run publish:patch",
    "publish:patch": "npm run git && node node_modules/build-a-npm/publish.js --patch --github --npmjs",
    "publish:minor": "npm run git && node node_modules/build-a-npm/publish.js --minor --github --npmjs",
    "publish:major": "npm run git && node node_modules/build-a-npm/publish.js --major --github --npmjs",
    "do": "npm run git && node publish.js --patch --github --npmjs"
  },
  "dependencies": {
    "inquirer": "*",
    "@inquirer/prompts": "*",
    "build-a-npm": "*"
  },
  "devDependencies": {},
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hsinghhira/build-a-npm.git"
  },
  "bugs": {
    "url": "https://github.com/hsinghhira/build-a-npm/issues"
  },
  "keywords": [
    "npm",
    "package",
    "scaffold",
    "cli",
    "generator",
    "publish",
    "github-packages",
    "npmjs"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "files": [
    "index.js",
    "publish.js",
    "lib",
    "config.template.json"
  ]
}
